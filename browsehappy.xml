	<scriptfile>script.php</scriptfile>
	<files>
		<filename plugin="browsehappy">browsehappy.php</filename>
		<filename>index.html</filename>
	</files>
	<media destination="plg_system_browsehappy" folder="media">
		<folder>css</folder>
