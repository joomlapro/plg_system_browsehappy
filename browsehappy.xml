		<fields name="params">
			<fieldset name="basic">
				<field
					name="minimal"
					type="list"
					class="inputbox"
					size="2"
					default="8"
					label="PLG_SYSTEM_BROWSEHAPPY_FIELD_MINIMAL_LABEL"
					description="PLG_SYSTEM_BROWSEHAPPY_FIELD_MINIMAL_DESC">
					<option value="">JSELECT</option>
					<option value="6">J6</option>
